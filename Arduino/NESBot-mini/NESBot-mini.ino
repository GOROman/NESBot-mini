void NES_reset()
{
  writeButtons(0x00);

  digitalWrite(PIN_RESET, HIGH);
  delay (100);
  digitalWrite(PIN_RESET, LOW);
  delay (100);
  digitalWrite(PIN_RESET, HIGH);
}

// セットアップ
void setup() {
  pinMode(PIN_RESET,  OUTPUT);
  pinMode(PIN_RIGHT,  OUTPUT);
  pinMode(PIN_LEFT,   OUTPUT);
  pinMode(PIN_DOWN,   OUTPUT);
  pinMode(PIN_UP,     OUTPUT);
  pinMode(PIN_START,  OUTPUT);
  pinMode(PIN_SELECT, OUTPUT);
  pinMode(PIN_B,      OUTPUT);
  pinMode(PIN_A,      OUTPUT);
  
  // ファミコン本体リセット
  NES_reset();

  // 割り込み開始
  attachInterrupt(0, NES_latch_pulse, FALLING);
}

// ボタン状態出力
void writeButtons(byte buttons)
{
  buttons = ~buttons; // 負論理へ

  digitalWrite(PIN_A,      buttons & A     );
  digitalWrite(PIN_B,      buttons & B     );
  digitalWrite(PIN_SELECT, buttons & SELECT);
  digitalWrite(PIN_START,  buttons & START );
  digitalWrite(PIN_UP,     buttons & UP    );
  digitalWrite(PIN_DOWN,   buttons & DOWN  );
  digitalWrite(PIN_LEFT,   buttons & LEFT  );
  digitalWrite(PIN_RIGHT,  buttons & RIGHT );
}

